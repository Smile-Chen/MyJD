<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F10215"
            android:orientation="horizontal"
            >
                <Button
                    android:id="@+id/title_search_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="返回"
                    />
                <EditText
                    android:id="@+id/title_search_name"
                    android:background="#fff"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:hint="京东超市满199减100"
                    android:lines="1"
                    android:drawableRight="@drawable/search_icon2"
                    android:layout_margin="20dp"
                    />
                <Button
                    android:id="@+id/title_search_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="搜索"
                    />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="历史记录"
            android:textColor="#ccc"
            android:layout_margin="10dp"
            />

        <co.example.hp.jdchen.mvp.hompage.view.activity.FlowLayout
            android:id="@+id/title_search_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </co.example.hp.jdchen.mvp.hompage.view.activity.FlowLayout>
           <Button
               android:id="@+id/title_search_cler"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="80dp"
               android:text="清空历史记录"
               />

</LinearLayout>
